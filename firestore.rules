rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas Generales: Requieren autenticación para cualquier acceso
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Reglas Específicas para auditoría (Opcional: solo admin puede ver log completo)
    match /auditLogs/{logId} {
      allow read: if request.auth.token.role == 'ADMIN';
      allow create: if request.auth != null;
    }

    // Reglas para el Módulo de Usuarios
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.role == 'ADMIN' || request.auth.uid == userId;
    }
  }
}
